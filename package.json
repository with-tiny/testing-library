{
  "name": "tiny-testing-library",
  "version": "0.0.11",
  "description": "Tiny testing library",
  "main": "dist/index.js",
  "bin": {
    "tiny-testing-library": "dist/index.js"
  },
  "repository": "github:xavikortes/tiny-testing-library",
  "scripts": {
    "build": "babel src --extensions .js,.jsx --out-dir dist",
    "lint": "eslint --ignore-path .gitignore --ext .js,.jsx .",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json|jsx)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "lint-staged": "lint-staged",
    "validate": "npm-run-all --parallel check-format lint build",
    "pre-commit": "npm run lint-staged && npm run build",
    "test": "node dist/index.js"
  },
  "keywords": [
    "test",
    "testing",
    "tiny",
    "jest",
    "vitest"
  ],
  "files": [
    "dist/**.*"
  ],
  "author": {
    "name": "xavikortes",
    "email": "javiercortesveliz@gmail.com"
  },
  "type": "module",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.0.1",
    "glob": "^7.2.0",
    "read-pkg-up": "^9.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.1"
  }
}
